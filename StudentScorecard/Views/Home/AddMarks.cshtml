@model StudentScorecard.Models.MarksEntryViewModel

<h2>Enter Marks for @Model.StudentName</h2>

<form asp-action="AddMarks" method="post">
    <input type="hidden" asp-for="StudentId" />

    <table class="table">
        <tr>
            <th>Subject</th>
            <th>Marks</th>
        </tr>
        @for (int i = 0; i < Model.Subjects.Count; i++)
        {
            <tr>
                <td>@Model.Subjects[i].SubjectName</td>
                <td>
                    <input type="hidden" asp-for="@Model.Subjects[i].StudentSubjectId" />
                    <input asp-for="@Model.Subjects[i].Marks" class="form-control" />
                </td>
            </tr>
        }
    </table>

    <button type="submit" class="btn btn-primary">Save Marks</button>
</form>
